<form class="card" method="post" action="/submitEmployeeActionForm" id="employee_action_form">
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="card-content">
                    <table>
                        <tbody>
                            <div class="eaf-title-for-modal">

                            <div>
                            {{#if data}}
                            <tr>

                                <div class="form-group col s12 m6">
                                    <label for="employeeName">Employee Name</label>
                                    <input type="text" name="employeeName" class="employeeName black-font" value="{{data.name}}">
                                </div>
                                <div class="form-group col s12 m6">
                                    <label for="employeePosition">Position Title</label>
                                    <input type="text" name="employeePosition"class="employeePosition black-font" value="{{data.position}}">
                                </div>
                                <div class="form-group col s12 m6">
                                    <label for="employeeBusinessUnit">Business Unit</label>
                                    <input type="text" name="employeeBusinessUnit" class="employeeBusinessUnit black-font" value="{{data.businessUnit}}">
                                </div>
                                <div class="form-group col s12 m6">
                                    <label for="employeeDepartment">Department</label>
                                    <input type="text" name="employeeDepartment" class="employeeDepartment black-font" value="{{data.department}}">
                                </div>


                                <td> </td>
                                <td class="PRF-info-label"></td>
                                <td class="employeeSupervisor"></td>
                                <td> </td>
                            </tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-12">
            <div class="card-action">
                <div class="row">
                    <div class="col s12 l6">
                        <div class="form-group col s12">
                            <label class="form-control-label">Action</label>
                        </div>
                        <div class="form-group col s12 m6 ">
                            <input type="radio" id="confirm_hiring" class="recommendAction" name="recommendAction"
                                value="Confirm Hiring" required >
                            <label for="confirm_hiring">Confirm Hiring</label>
                        </div>
                        
                        {{!-- <div class="form-group col s4">
                            <input type="radio" id="confirm_employment" class="recommendAction" name="recommendAction"
                                value="Confirm Regular Employment" required >

                            <label for="confirm_employment">Confirm Regular Employment</label>
                        </div> --}}
                        
                        <div class="form-group col s12 m6  ">
                            <input type="radio" id="Secondment" class="recommendAction" name="recommendAction"
                                value="Secondment" required >
                            <label for="Secondment">Secondment</label>
                        </div>
                        <div class="form-group col s12 m6  ">
                            <input type="radio" id="transfer" class="recommendAction" name="recommendAction"
                                value="Transfer" required >
                            <label for="transfer">Transfer</label>
                        </div>
                        <div class="form-group col s12 m6 ">
                            <input type="radio" id="termination" class="recommendAction" name="recommendAction"
                                value="Termination"  checked required>
                            <label for="termination">Termination/Separation</label>
                        </div>
                    </div>
                    <div class="form-group col s12 l6">
                        <label for="effective_date">Effective Date</label>
                        <input id="effective_date" type="date" class="validate" name="effective_date"
                            value="{{formatDateAndTime data.effectiveDate}}" required>
                        <input type="text" name="offboardingId" value="{{data._id}}" hidden/>
                    </div>

                </div>
                <div class="row form-group col s12 otherInput"></div>


                <div class="clearBoth"></div>

            </div>


            <div class="card-action">

                <div class="row">
                    <div class="form-group col s12">
                        <label for="justification">Justification For The Action</label>
                        <textarea class="form-control" id="justification" class="justification" name="justification"
                            rows="3" required></textarea>

                    </div>
                </div>


                <div class="clearBoth"></div>

            </div>

            <div class="card-action">
                <div class="row">
                    <center><input class="waves-effect waves-light btn" type="submit" id="submit" value="Submit" />
                    </center>
                </div>
            </div>

        </div>
    </div>
</form>