
<div class="row">
    <div class="col-lg-12">
        <form class="card" action="/SubmitSkillsAssessment/{{skillsSetUpID}}/{{date}}" method="POST">
            <div class="card-action">
                <div class="col s12">
                    <div class="row">
                        <div class="form-group col s7">
                            <label for="assessmentID">Assessment ID</label>
                            <p class="assessmentID">{{assessmentID}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col s4">
                            <label for="skillBusinessUnit">Scheduled Cycle Date</label>
                            <p>{{formatDate date}}</p>
                        </div>    
                    </div>
                    <div class="row">
                        <div class="form-group col s4">
                            <label for="skillBusinessUnit">Name</label>
                            <p>{{session.name}}</p>
                        </div>    
                    </div>
                    <div class="row">
                        <div class="form-group col s4">
                            <label for="skillBusinessUnit">Position</label>
                            <p>{{session.position}}</p>
                        </div>    
                    </div>
                    <div class="row">
                        <div class="form-group col s4">
                            <label for="skillBusinessUnit">Department</label>
                            <p>{{session.department}}</p>
                        </div>    
                    </div>
                    <div class="row">
                        <div class="form-group col s4">
                            <label for="skillBusinessUnit">Business Unit</label>
                            <p>{{session.businessUnit}}</p>
                        </div>    
                    </div>
                    <div class="row">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Skill</th>
                                    <th>Rating</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--for each skill in position-->
                                {{#each targetSkills}}
                                <tr>
                                    <td>{{this}}</td>
                                    <td class="rating">
                                        <select class="rating" id="rating" name="rating"  required>
                                        <option value="" disabled> Rating</option>
                                        <option value="5" selected>5 - Outstanding</option>
                                        <option value="4">4 - Above Average</option>
                                        <option value="3">3 - Acceptable</option>
                                        <option value="2">2 - Below Average</option>
                                        <option value="1">1 - Needs Improvement</option>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            <div class="clearBoth"></div>
            <div class="card-action">
                <div class="row">
                    <center><button class="waves-effect waves-light btn" type="submit">Submit</button></center>
                </div>
            </div>
        </form>
    </div>
</div>

