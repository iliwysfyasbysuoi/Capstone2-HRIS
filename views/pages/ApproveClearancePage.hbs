<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Approve Clearance Form</title>

    {{!-- head stylesheets and js --}}
    {{> partials/headlinks}}


</head>

<body>
    <div id="wrapper">

        {{> partials/topnav}}
        {{> partials/sidenav}}

        <div id="page-wrapper">
            <div class="header">
                <h1 class="page-header">
                    Employee Clearance 
                </h1>
            </div>


            <div id="page-inner">

                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            
                            <div class="card-action">
                                <!-- TODO: add clearance form view -->
                                <h2><center>Clearance Form</center></h2>
                                <br>
                                <br>
                                <div class="col s12">
                                    <div class="row">
                                        <div class="form-group col s6">
                                            <p>Name:</p>
                                        </div>
                                        <div class="form-group col s6">
                                            <p>Contact Number:</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="row">
                                        <div class="form-group col s6">
                                            <p>Position Title:</p>
                                        </div>
                                        <div class="form-group col s6">
                                            <p>Personal Email Address:</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="row">
                                        <div class="form-group col s6">
                                            <p>Department:</p>
                                        </div>
                                        <div class="form-group col s6">
                                            <p>Forwarding Address:</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="row">
                                        <div class="form-group col s6">
                                            <p>Employment Date:</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="row">
                                        <div class="form-group col s6">
                                            <p>Nature of Separation:</p>
                                        </div>
                                        <div class="form-group col s6">
                                            <p>Effective Date:</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="row">
                                        <!--TODO: add table -->
                                        <div class="table-responsive">
                                            <table class="table table-hover pointer green-thead">
                                                <thead>
                                                    <tr>
                                                        <th>Department</th>
                                                        <th>List of Accountabilities</th>
                                                        <th>Status of Accountabilities</th>
                                                        <th>Approved By</th>
                                                        <th>Date Signed</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each ApproveClearanceData}}
                                                    <tr>
                                                        <td>{{department}}</td>
                                                        <td>{{accountabilityName}}</td>
                                                        <td>{{accountabilityStatus}}</td>
                                                        <td>{{approver}}</td>
                                                        <td>{{signedDate}}</td>
                                                    </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="row">
                                        <div class="card-action card-title center">
                                            <a class="waves-effect waves-light btn">Approve Clearance</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="clearBoth"><br /></div>
                            </div>
                        </div>

                        <footer>

                        </footer>
                    </div>
                    <!-- /. PAGE INNER  -->
                </div>
                <!-- /. PAGE WRAPPER  -->
            </div>
            <!-- /. WRAPPER  -->

            <!-- JS Scripts-->
            {{> partials/endOfBodyJSScripts}}



</body>

</html>