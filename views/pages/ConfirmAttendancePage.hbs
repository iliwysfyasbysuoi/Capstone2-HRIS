<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Training Program Attendance</title>

    {{!-- head stylesheets and js --}}
    {{> partials/headlinks}}

  <script src="/js/ConfirmAttendancePage.js" type="text/javascript" defer> </script>
    


</head>

<body>
    <div id="wrapper">

        {{> partials/topnav}}
        {{> partials/sidenav}}

        <div id="page-wrapper">
            <div class="header">
                <h1 class="page-header">
                    Training Program Attendance
                </h1>
            </div>
            <form method="POST" action="/UpdateAttendance/{{tracker._id}}">
                <div id="page-inner">
                    <div id="userInfo" class="card">
                        <div class="card-content">
                            <div class="Summary-info  ">
                                <table class=" col s12 ">
                                    <tbody>
                                        <tr></tr>
                                        <tr>
                                            <td class="PRF-info-label">Title of Training Program</td>
                                            <td class="trainingTitle">{{tracker.trainingDetails.trainingTitle}}</td>
                                            <td> </td>
                                            <td class="PRF-info-label">Sponsor/Organizer</td>
                                            <td class="trainingOrganizer">{{tracker.trainingDetails.trainingSponsor}}</td>
                                            <td> </td>
                                        </tr>
                                        <tr>
                                            <td class="PRF-info-label">Venue of the Training</td>
                                            <td class="trainingVenue">{{tracker.trainingDetails.trainingVenue}}</td>
                                            <td> </td>
                                            <td class="PRF-info-label">TrainingDate</td>
                                            <td class="trainingDate">{{formatDateAndTime tracker.trainingDetails.trainingDate}}</td>
                                            <td> </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="userInfo" class="card">
                        <div class="card-content">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Employee Name</th>
                                        <th>Position Title</th>
                                        <th>Attendance</th>
                                    </tr>
                                </thead>
                                <tbody class="trainingEmployeeList">
                                    {{#each tracker.employees}}
                                    <tr>
                                        <td>
                                            {{!-- <input type="text" value="{{employeeName}}" class="employeeName" id="employeeName" name="employeeName" disabled/> --}}
                                            {{employeeName}}
                                        </td>
                                        <td>
                                            {{employeePosition}}
                                        <td>
                                            <select class="employeeAttendance" id="employeeAttendance" name="employeeAttendance"  required>
                                                <option value="{{attendance}}" hidden="hidden" selected="selected">{{attendance}}</option>
                                                <option value=""  disabled> Select Type</option>
                                                <option value="Pending">Pending</option>
                                                <option value="Present">Present</option>
                                                <option value="Late">Late</option>
                                                <option value="Absent">Absent</option>
                                            </select>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="card-action">
                                <div class="row">
                                   <center><button class="waves-effect waves-light btn" type="submit">Submit</button></center>
                                </div>
                            </div>
                    </div>
                </div>
            </form>


                    <!-- /. PAGE WRAPPER  -->
        </div>
            <!-- /. WRAPPER  -->

            <!-- JS Scripts-->
            {{> partials/endOfBodyJSScripts}}





</body>

</html>