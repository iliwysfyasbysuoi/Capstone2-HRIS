<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exit Survey Forms</title>

    {{!-- head stylesheets and js --}}
    {{> partials/headlinks}}


</head>

<body>
    <div id="wrapper">

        {{> partials/topnav}}
        {{> partials/sidenav}}

        <div id="page-wrapper">
            <div class="header">
                <h1 class="page-header">
                    Exit Survey Forms
                </h1>
            </div>
            <div id="page-inner">
                <div class="row">

                    <div class="col-md-12">
                        <!--    Hover Rows  -->
                        <div class="card">
                            <div class="card-action">
                                Exit Survey
                            </div>
                            <div class="card-content">

                                <div class="row">
                                    <div class="input-group col filter-select ">
                                        <label>Filter Position</label>
                                        <select class="filter-table">
                                            <option value="none" selected>none</option>
                                            {{#each positions}}
                                                <option value="{{this}}">{{this}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <br>
                            </div>


                            <div class="table-responsive">
                                <table class="table table-hover pointer green-thead">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Position Title</th>
                                            <th>Business Unit</th>
                                            <th>Department</th>
                                            <th>Date Submitted</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if ExitSurveyData}}
                                        {{#each ExitSurveyData}}
                                        <tr onclick="window.location.href = '/ExitSurveyTracker/{{_id}}';">
                                            <td>{{employee.name}}</td>
                                            <td class="position">{{employee.position}}</td>
                                            <td>{{employee.businessUnit}}</td>
                                            <td>{{employee.department}}</td>
                                            <td>{{formatDateAndTime submitDate}}</td>
                                        </tr>
                                        {{/each}}
                                        {{/if}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End  Hover Rows  -->


                    <footer>

                    </footer>
                </div>
                <!-- /. PAGE INNER  -->
            </div>

            <!-- /. PAGE WRAPPER  -->
        </div>
        <!-- /. WRAPPER  -->

        <!-- JS Scripts-->
        {{> partials/endOfBodyJSScripts}}

        <script>

            function search_table(value) {
                    $(".position").each(function () {
                        //var found = 'false';
                        if (value ==='none')   
                            $(this).each(function () {    
                                $(this).parent().show(); 
                            }) 
                        else
                            $(this).each(function () {
                                if ($(this).text().toLowerCase() === value.toLowerCase()) {
                                    $(this).parent().show();
                                } 
                                else {
                                    $(this).parent().hide();
                                }
                            })
                    }) 
            }
